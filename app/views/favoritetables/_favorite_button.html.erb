<% unless current_user == user %>
  <% if current_user.favorite?(user) %>
    <%= form_for(current_user.favoritetables.find_by(follow_id: user.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :favorite_id, user.id %>
      <%= f.submit 'Unfavorite', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.favoritetables.build) do |f| %>
      <%= hidden_field_tag :favorite_id, user.id %>
      <%= f.submit 'Favorite', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
<% end %>